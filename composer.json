{
    "name": "cassie/shopify-admin",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/o-shabashov/common"
        }
    ],
    "require": {
        "php": "^8.2",
        "cassie/common": "dev-main",
        "kyon147/laravel-shopify": "^21.1",
        "laravel/framework": "^11.9",
        "laravel/tinker": "^2.9",
        "orchid/platform": "^14.35"
    },
    "require-dev": {
        "aschmelyun/fleet": "^1.1",
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.1",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0.1",
        "worksome/envy": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        },
        "github-oauth": {
            "github.com": "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"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
